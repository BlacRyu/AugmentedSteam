{
    "name": "Augmented Steam",
    "short_name": "AS",
    "version": "1.4.7",
    "description": "Augments your Steam Experience",
    "icons": {
      "128": "img/es_128.png",
      "96": "img/es_96.png",
      "48": "img/es_48.png",
      "32": "img/es_32.png"
    },
    "manifest_version": 2,
    "options_ui": {
      "page": "html/options.html",
      "open_in_tab": true
    },
    "permissions": [
      "storage",
      "*://*.steampowered.com/*",
      "*://steamcommunity.com/*",
      "*://*.isthereanydeal.com/"
    ],
    "optional_permissions": [
      "webRequest",
      "webRequestBlocking"
    ],
    "web_accessible_resources": [
      "img/*.png",
      "img/*.gif",
      "img/*.jpg",
      "img/*.svg",
      "css/*.css",
      "html/options.html",
      "html/changelog_new.html",
      "img/*/*.png",
      "img/profile_styles/*/header.jpg",
      "img/profile_styles/*/showcase.png",
      "img/profile_styles/*/style.css",
      "img/profile_styles/*/preview.png",
      "localization/*.json",
      "js/extra/holidayprofile.js"
    ],
    "homepage_url": "https://es.isthereanydeal.com/",
    "background": {
      "scripts": [
        "js/background.js"
      ]
    }
}
